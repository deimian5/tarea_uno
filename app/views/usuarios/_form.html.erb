<form role="form">
    <div class="form-group">
      <%= form_for(@usuario) do |f| %>
        <% if @usuario.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

            <ul>
            <% @usuario.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :nombre %><br>
          <%= f.text_field :nombre, :class=>"form-control", :placeholder=>"Nombre Ejemplo" %>
        </div>
        <div class="field">
          <label for="exampleInputEmail1"><%= f.label :email %></label><br>
          <%= f.text_field :email, :type=>"email", :class=>"form-control", :placeholder=>"ejemplo@ejemplo.com" %>
        <div class="field">
          <%= f.label :password %><br>
          <%= f.text_field :password, :type=>"password", :class=>"form-control", :placeholder=>"Password"%>
        </div>
        <div class="actions">
          <%= f.submit :type=>"button", :class=>"btn btn-primary"%>
        </div>
      <% end %>
    </div>
</form>
